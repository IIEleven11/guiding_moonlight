{
  "name": "guiding_moonlight",
  "version": "1.0.0",
  "description": "AI-powered goal achievement assistant",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "esbuild src/main/main.ts src/main/preload.ts --bundle --platform=node --outdir=dist/main --external:electron --external:electron-store",
    "build:renderer": "esbuild src/renderer/index.tsx --bundle --outfile=dist/renderer/bundle.js --loader:.tsx=tsx --loader:.ts=ts --loader:.css=css",
    "copy:html": "cp src/renderer/index.html dist/renderer/index.html",
    "build": "mkdir -p dist/renderer && npm run build:main && npm run build:renderer && npm run copy:html",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IIEleven11/guiding_moonlight.git"
  },
  "keywords": ["goal", "productivity", "ai", "assistant"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/IIEleven11/guiding_moonlight/issues"
  },
  "homepage": "https://github.com/IIEleven11/guiding_moonlight#readme",
  "build": {
    "appId": "com.guidingmoonlight.app",
    "productName": "Guiding Moonlight",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-store": "^11.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.0",
    "wait-on": "^9.0.3"
  }
}
